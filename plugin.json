{
    "description": "Monitors Windows Process Metrics",
    "command": "powershell -NoLogo -NonInteractive -Command Set-ExecutionPolicy RemoteSigned; .\\process-metric.ps1 CPU powershell",
    "metrics" : [
    "WINDOWS_PROCESS_CPU"
    ],

    "paramSchema": [
        {
            "title": "Process Name",
            "name": "process",
            "description": "Name of the process to monitor",
            "type": "string",
            "default": "explorer",
            "required": true
        },
        {
            "title": "CPU",
            "name": "cpu",
            "description": "Collect Process CPU",
            "type": "boolean",
            "default": true,
            "required": false
        },
        {
            "title": "Memory",
            "name": "memory",
            "description": "Collect Process Memory",
            "type" : "boolean",
            "default" : "true",
            "required": false
        }
    ]
}

